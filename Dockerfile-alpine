# Stage 1: Build
FROM golang:1.22-alpine AS builder

# Install git and build tools (if needed)
RUN apk add --no-cache git

WORKDIR /app

# Copy source code
COPY . .

# Build Go binary (static build for portability)
RUN go build -o server main.go

# Stage 2: Run
FROM alpine:3.20

# Install bash for debugging (optional)
RUN apk add --no-cache bash

WORKDIR /app
COPY --from=builder /app/server .

EXPOSE 8080

CMD ["./server"]
